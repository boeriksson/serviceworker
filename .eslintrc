{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "func-names": [2, "never"],
    "semi": [2, "never"],
    "max-len": [2, {
      "code": 120,
      "comments": 140,
      "ignoreUrls": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-tag-spacing": [2,
      {"beforeSelfClosing": "allow"}
    ],
    "comma-dangle": "off",
    "indent": [
      "warn",
      4,
      {"SwitchCase": 1}
    ]
  },
  "plugins":[
    "react-hooks"
  ],
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "globals": {
    "alert": true,
    "prompt": true,
    "console": true,
    "window": true,
    "describe": true,
    "it": true,
    "beforeEach": true,
    "afterEach": true,
    "expect": true
  }
}